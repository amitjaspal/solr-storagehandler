  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
        <includes>
        	<include>org.noggit:noggit</include>
        	<include>org.apache.httpcomponents:httpmime</include>
        	<include>org.apache.solr:solr-solrj</include>
